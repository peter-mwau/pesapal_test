# Backend Environment Variables

# Database
DATABASE_URL="mysql://user:password@localhost:3306/pesapal_test"

# Clerk Authentication
CLERK_PUBLISHABLE_KEY="your_clerk_publishable_key"
CLERK_SECRET_KEY="your_clerk_secret_key"

# Pesapal Configuration
# Get these from: https://www.pesapal.com/ (Demo: https://cybqa.pesapal.com/)
PESAPAL_CONSUMER_KEY="your_pesapal_consumer_key"
PESAPAL_CONSUMER_SECRET="your_pesapal_consumer_secret"

# Environment: 'sandbox' for testing, 'production' for live
PESAPAL_ENV="sandbox"

# IPN ID - Get this by calling POST /api/payments/register-ipn once
# Save the returned ipn_id here
PESAPAL_IPN_ID=""

# URLs
BACKEND_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5173"

# Server
PORT=3000
